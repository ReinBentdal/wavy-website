---
import '~/styles/global.css';
import Layout from '~/layouts/Layout.astro';
import Header from '~/layouts/Header.astro';
import Footer from '~/layouts/Footer.astro';
import { routes } from '~/routes';

import monkeyIcon from '~/assets/icons/MONKEY.svg'
---

<Layout title="Wavy Industries">
	<main>
		<Header />
		<section>
			<h1>Support</h1>
			<p>Here you'll find all the resources you need for your device.</p>
			<div style="display: flex; gap: 10px;">
				<img height="40px" src={monkeyIcon.src} alt="monkey icon" />
				<h3 >WAVY MON<b>KEY</b></h3>
			</div>
			<div style="line-height: 1.5;">
			<a class="resource" href={routes.deviceUtility}>Firmware 1.1.3 released (10. nov 2024)</a><br/>
			<a class="resource" href={routes.monkeyGettingStarted}>Getting started</a><br/>
			<a class="resource" href={routes.monkeyManual}>Manual</a>
			</div>
			<!-- <LinkButton href={routes.monkeyGettingStarted} type="default" >MONKEY getting started</LinkButton><br/><br/>
            <LinkButton href={routes.monkeyManual} type="default" >MONKEY manual</LinkButton><br /><br /> -->
		</section>
		<Footer />
	</main>
</Layout>

<style>
main {
	min-height: 100vh;
	display: flex;
	flex-direction: column;
}
section {
	width: 100%;
	padding: 0 20px;
	max-width: 1000px;
	margin: 0 auto;
	flex-grow: 2;
}
h1 {
	margin-block-start: 0em;
	margin-block-end: 0em;
}
h3 {
	margin-block-end: 1em;
}
.resource {
	
}
</style>