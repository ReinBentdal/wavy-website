---
import '~/styles/global.css';
import { routes } from '~/routes';
import Layout from '~/layouts/Layout.astro';
import Header from '~/layouts/Header.astro';
import Footer from '~/layouts/Footer.astro';
import LinkButton from '~/components/LinkButton.astro';

// images
import midiConnectImg from '~/assets/midi_connect/screenshot 2.png';
---

<Layout title="Wavy Industries: MIDI Connect">
	<main>
		<Header />
		<section>
			<h1>MIDI Connect for macOS</h1>
            <div class="sub-title-block" >
				<p class="catch-phrase">ðŸ›‘âœ‹ STOP menu-diving each time you want to connect to a Bluetooth MIDI device on macOS</p>
				<LinkButton href={routes.midiConnectAppStore} type="highlight" >Download on App Store</LinkButton>
			</div>
            <img src={midiConnectImg.src} alt="MIDI connect view" />
		</section>
		<Footer />
	</main>
    <Footer />
</Layout>

<style>
main {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
}

section {
    width: 100%;
    padding: 0 20px;
}

section img {
    object-fit: contain;
    width: calc(100% + 40px);
    margin-left: -20px;
    margin-top: 20px;
}

h1 {
    margin-block-start: 0em;
    margin-block-end: 0em;
}

/* p {
    max-width: 800px;
} */

.catch-phrase {
    font-size: 20px;
    font-weight: 300;
    margin-block-start: 0em;
    margin-block-end: 0em;
}

.sub-title-block {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 10px;
}

</style>