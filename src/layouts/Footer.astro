    special.innerHTML = special1 + special2 + "@"+ "wavyindustries.com";
    specialA.href = "mai" + "lto:" + special1 + special2 + "@" + "wavyindustries.com";
}
setTimeout(doSomethingSpecial, 1000);
</script>