---
import '../styles/global.css';
import Layout from "./Layout.astro";
import Header from "./Header.astro";
import Footer from "./Footer.astro";

const {frontmatter} = Astro.props;

---

<Layout title={frontmatter.title}>
    <main>
        <Header />
        <section class="markdown-content">
            <article>
                <slot />
            </article>
        </section>
        <Footer />
    </main>
</Layout>

<!-- Style is global to be able to effect the underlying markdown content. Thus keep reference to ID to prevent global scope bloat -->
<style is:global>
.markdown-content {
    width: 100%;
	padding: 0 20px;
}

.markdown-content {
	min-height: 100vh;
	display: flex;
	flex-direction: column;
}

.markdown-content article {
    margin: 0 auto;
    max-width: 1000px;
}

.markdown-content img {
    width: 100%;
    object-fit: contain;
}

.markdown-content a {
    text-decoration: underline;
}

.markdown-content blockquote {
    background-color: #f5f5f5;
    font-style: italic;
    margin-left: 0px;
}

</style>