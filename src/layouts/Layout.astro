---
interface Props {
	title: string;
	description?: string;
}

const { title, description = "Wavy Industries Bluetooth MIDI keyboards for music creation." } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<slot name="meta">
			<meta property="og:title" content="Wavy Industries music devices for facilitate your creative process.">
			<meta property="og:description" content="Compact, versatile MIDI keyboard designed for musicians, producers, and anyone eager to start exploring music creation. Perfect for beginners or those with experience in other instruments looking to expand their creativity.">
			<meta property="og:image" content="https://wavyindustries.com/monkey_reveal.png">
		</slot>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>